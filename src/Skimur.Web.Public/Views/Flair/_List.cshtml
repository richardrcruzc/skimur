@model IEnumerable<ListFlairViewModel>


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-sm-2">
        User can Edit?
    </div>
    <div class="col-md-3">
        Flair Text
    </div>
    <div class="col-md-3">
        Css Class
    </div>
    <div class="col-md-2">
    </div>

</div>
@foreach(var flair in Model)    
{
    @Html.HiddenFor(model => flair.Id)
    <div class="form-group">
        <div class="row">

            <div class="col-md-3">
                @flair.UserName <a href="#">  @flair.Text </a>
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => flair.TextEditable, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => flair.Text, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => flair.CssClass, new { @class = "form-control" })
            </div>
            <div class="col-md-1">

                <button type="button" class="btn btn-danger" title="Delete row">remove</button>
              
                
                   
                
            </div>
            @* <div class="select-flair" data-flair-id="@flair.Id" style="cursor: pointer;" onclick="return skimurui.flair.editFlairInBox(this);">*@

        </div>
    </div>
}

